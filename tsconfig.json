{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": false,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext"
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"]
}
